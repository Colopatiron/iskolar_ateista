<div class="info">
  <div class="cart_title"><strong>Shopping Cart</strong></div>
  <table>
    <%= render(cart.line_items) %>
  
    <tr class="total_line">
      <td colspan="2">Total</td>
      <td class="total_cell"><%= number_to_currency(cart.total_price, unit: "&#8369;") %></td>
    </tr>
  </table>
  
  <div class="cart_buttons">
    <%= button_to 'Empty cart', cart, method: :delete, confirm: 'Are you sure?' %>
  </div>
</div>