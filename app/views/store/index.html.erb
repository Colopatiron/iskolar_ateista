<script type="text/javascript" charset="utf-8">
   toggle_active_link('nav_books');
</script>

<% if notice %>
<p class="notice"><%= notice %></p>
<% end %>

<h1>The PATAS Library Catalog</h1>
<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %>&nbsp;&mdash;&nbsp;&nbsp;<span class="author"><%= product.author %></span></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price, unit: "&#8369;") %></span>
      <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
    </div>
  </div>
<% end %>
<p><%= will_paginate @products %></p>